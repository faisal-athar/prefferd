<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#000</item>
    <item name="colorPrimaryDark">#333</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">#fff</item>
    <item name="colorControlActivated">#fff</item>
    <item name="colorControlHighlight">#fff</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="customfontstyle" parent="@android:style/TextAppearance">
    <item name="android:fontFamily">@font/malgun</item>
    <item name="android:textSize">18sp</item>
  </style>


  <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="CustomButton" parent="AppTheme">
    <item name="android:background">@drawable/button_selector_effect</item>
    <item name="android:layout_height">46dp</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TextInputLineStyle" parent="AppTheme">
    <item name="colorControlNormal">@color/transparent</item>
    <item name="colorControlActivated">@color/transparent</item>
  </style>

  <style name="TextInputLabelStyle" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/text_grey</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="CustomInputLayout" parent="AppTheme">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:gravity">bottom</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textColorHint">@color/text_grey</item>
    <item name="android:background">@drawable/text_input_bg</item>
    <item name="android:theme">@style/TextInputLineStyle</item>
  </style>

  <style name="CustomEditText" parent="AppTheme">
    <item name="android:textColor">#000</item>
    <item name="android:textCursorDrawable">@null</item>
    <item name="android:textSize">14sp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:paddingBottom">8dp</item>
  </style>

  <style name="CustomSpinner" parent="AppTheme">
    <item name="android:layout_height">50dp</item>
    <item name="android:theme">@style/CustomSpinnerItem</item>
  </style>

  <style name="CustomSpinnerItem" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:textColor">@color/text_grey</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="facebookButton">
    <item name="android:background">@drawable/facebook_btn</item>
    <item name="android:layout_height">46dp</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:textColorPrimary">@color/text_black</item>
    <item name="android:textColorSecondary">@color/text_black</item>
  </style>

  <style name="RatingBarStyle" parent="AppTheme">
    <item name="colorControlNormal">@color/theme_primary_color</item>
    <item name="colorControlActivated">@color/theme_primary_color</item>
    <item name="colorControlHighlight">@color/theme_primary_color</item>
  </style>



</resources>
